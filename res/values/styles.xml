<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light"><!-- AppBaseTheme -->
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowBackground">@color/main_color</item>
         <item name="android:textSize">@dimen/comm_text_size</item>
    </style>
<style name="CustomStyle"/>
  <style name="CustomStyle.RootView">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
  </style>
 <style name="CustomStyle.RootView.Vertical">
    <item name="android:orientation">vertical</item>
  </style>
  <style name="CustomStyle.ProgressBar">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_centerVertical">true</item>
    <item name="android:layout_centerHorizontal">true</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:visibility">gone</item>
  </style>
    <style name="CustomStyle.EmptyCase">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_centerVertical">true</item>
    <item name="android:layout_centerHorizontal">true</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:visibility">gone</item>
    <item name="android:src">@drawable/empty_case</item>
  </style>
   <style name="CustomStyle.ListView">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:dividerHeight">@dimen/divider_height</item>
    <item name="android:divider">@color/sixth_color</item>
  </style>
  <style name="CustomStyle.SurfaceView">
    <item name="android:scaleType">centerCrop</item>
    <item name="android:background">@color/main_color</item>
  </style>
  
  <style name="CustomStyle.SurfaceView.Face">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">@dimen/surface_view_face_height</item>
  </style>
  
  
</resources>
