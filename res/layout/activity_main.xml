<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="vertical" >

        <fragment
            android:id="@+id/f_id_show"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            class="com.tec.jca.faceverification.ui.fragment.IdShowFragment" />

        <fragment
            android:id="@+id/f_face_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            class="com.tec.jca.faceverification.ui.fragment.FacePreviewFragment" />
    </LinearLayout>
       <!-- ProgressBar -->

    <ProgressBar
        android:id="@+id/pb_loading"
        style="@style/CustomStyle.ProgressBar" />
    

</FrameLayout>